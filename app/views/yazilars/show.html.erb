<p id="notice"><%= notice %></p>

<section class="blog-post-area section-margin">
<div class="container">
  <div class="row">
    <div class="col-md-12" class="col-ms-12">
        <div class="main_blog_details">
        
           <h4>  <%= @yazilar.baslik %> </h4>
           <%= image_tag @yazilar.resim.url(:medium) if @yazilar.resim? %> 
            <div class="user_details">
             
              <div class="float-right mt-sm-0 mt-3">
                <div class="media">
                  <div class="media-body">
                    <h5>  <%= @yazilar.yazar %> </h5>
                    <p> <%= @yazilar.tarih %> </p>
                  </div>
                  <div class="d-flex">
                    <img width="42" height="42" src="https://via.placeholder.com/25x25" alt="">
                  </div>
                </div>
              </div>
            </div>
           
            <p> <%= simple_format @yazilar.aciklama %></p>
      
          </div>
          <p class="float-right">   <%= link_to 'Geri Dön', yazilars_path,class:"btn btn-primary" %></p>

          </div>
          </section>

<%= form_with model: [@yazilar,@comment] ,local: true do |f| %>
 
<div class="container">
<div class="card">
    <div class="card-body">
  <div class="row">
      <div class="col-md-12">
      <div class="field">
      <h2 class="text-left">İçerik</h2>
      <%= f.text_area :icerik ,class:"form-control",id:"exampleFormControlTextarea1", rows:"3" %>
      <div class="alert alert-light float-right"  role="alert">
      <div class="actions" >
      <%= f.submit "Yorum" ,class:"btn btn-primary" %>
    </div>
    </div>
     
    </div>
      </div>
    
    
  </div>
</div>
</div>
</div>

    
  
<% end %>
<h2 class="text-center">Yorumlar</h2>
<% @comments.each do |comment| %>
  


<div class="container">

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-2">
                <img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid"/>
                <p class="text-secondary text-center"> <%= comment.created_at.strftime("%FT%T")%> </p>
            </div>
            <div class="col-md-10">
                <p>
                    <strong><%= comment.user.username %></strong>
                    <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                      <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                    <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                    <span class="float-right"><i class="text-warning fa fa-star"></i></span>

               </p>
               <div class="clearfix"></div>
                <p><%= comment.icerik %></p>
               
            </div>
        </div>
         
    </div>
</div>
</div>
<br/>
<% end %>